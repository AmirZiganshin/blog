<h2 align="center"><%= @post.title %> </h2>
<h6>Категория: <%= link_to @post.category.name, category_path(@post.category)%></h6>
<% if @post.model1 %>
<h6>Автор: <%= link_to @post.model1.email, user_posts_path( @post.model1 )%></h6>
<% end %>
<% if @post.moderated!=nil %>
<% if @post.moderated==true %>
<h6 style="color: green">Moderated: <%= @post.moderated %></h6>
<% elsif @post.moderated==false %>
<h6 style="color: red">Moderated: <%= @post.moderated %></h6>
<% end %>
<% end %>
<br>
<p> <%= @post.body %> </p>
<hr><br>
<%= link_to 'Одобрить', confirm_path(id: @post.id), method: :patch, data: { confirm: 'Вы уверены?' }, :class=>"btn btn-success" %>
<%= link_to "Отклонить", destroy_path(id: @post.id), method: :delete, data: {confirm: "Вы уверены что хотите отклонить статью? Это приведет к ее удалению"}, :class => 'btn btn-danger' %>
